<Page x:Class="MenschensKinder.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenschensKinder"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="MenuPage" Height="700" Width="900" Background="Cyan"
      ShowsNavigationUI="False">

    <Page.Resources>
        
    </Page.Resources>

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Frame x:Name="menuFrm"/>
        <Button Style="{StaticResource MenuButton}" Click="MenuBtnSingleplayer" Content="Einzelspieler"></Button>
        <Button Style="{StaticResource MenuButton}" Click="MenuBtnMultiplayer" Content="Mehrspieler"></Button>
        <Button Style="{StaticResource MenuButton}" Click="MenuBtnSettings" Content="Einstellungen"></Button>
        <Button Style="{StaticResource MenuButton}" Click="MenuBtnExit" Content="Verlassen"></Button>
    </StackPanel>
</Page>
