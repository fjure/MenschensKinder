<Page x:Class="MenschensKinder.ColorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenschensKinder"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ColorPage"
      ShowsNavigationUI="False" Background="Cyan">

    <Page.Resources>
        
    </Page.Resources>
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Style="{StaticResource MenuRedButton}" Click="ColorBtn" Content="Rot"></Button>
        <Button Style="{StaticResource MenuButton}" Click="ColorBtn" Content="Blau"></Button>
        <Button Style="{StaticResource MenuGreenButton}" Click="ColorBtn" Content="Grün"></Button>
        <Button Style="{StaticResource MenuYellowButton}" Click="ColorBtn" Content="Gelb"></Button>
        <Button Style="{StaticResource MenuButton}" Click="BackBtn" Content="Zurück"></Button>
    </StackPanel>
</Page>
