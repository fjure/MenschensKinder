<Page x:Class="MenschensKinder.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenschensKinder"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="GamePage"
      ShowsNavigationUI="False" Background="LightGoldenrodYellow">

    <Page.Resources>
        <Image x:Key="DiceBtn" Source="dice.png" Focusable="False"/>
        <Style x:Key="FieldEllipse" TargetType="{x:Type Ellipse}">
            <Setter Property="Stroke" Value="Black"/>
        </Style>
        <Style x:Key="DiceBtnStyle" TargetType="{x:Type Button}">
            <Setter Property="Content" Value="{StaticResource DiceBtn}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Focusable" Value="False"/>
        </Style>
        
    </Page.Resources>

    <Grid x:Name="grid" Width="800" Height="600">
        
    </Grid>
</Page>
